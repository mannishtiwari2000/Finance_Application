<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f7fb"
        tools:context=".Profile">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_action_bar"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:theme="?attr/actionBarTheme"
            android:backgroundTint="@color/white"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp" android:layout_alignParentTop="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"

                      android:orientation="horizontal">
            <com.comix.rounded.RoundedCornerImageView
                    android:id="@+id/Profile_icon"
                    android:src="@drawable/ic_baseline_add_24"

                    android:layout_width="40dp"

                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"

                    android:scaleType="fitXY"
                    app:cornerBottomDisable="false"
                    app:cornerLeftDisable="false"
                    app:cornerRightDisable="false"
                    app:cornerTopDisable="false" app:cornerRadius="35dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                    app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.093"/>
            <TextView
                    android:text="Profile"
                    android:textColor="@color/purple_500"
                    android:layout_marginRight="20dp"

                    android:textAlignment="viewStart"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-black"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9" android:layout_weight="1"
                    android:gravity="start"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/sectionA"
                          android:layout_height="100dp"
                          android:orientation="horizontal">

                <com.comix.rounded.RoundedCornerImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/upload_image_profile"
                        android:src="@drawable/justin"
                        android:layout_width="80dp"

                        android:layout_marginLeft="20dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"

                         android:scaleType="fitXY"
                        app:cornerBottomDisable="false"
                        app:cornerLeftDisable="false"
                        app:cornerRightDisable="false"
                        app:cornerTopDisable="false"
                        app:cornerColor="#FFF"
                        app:cornerRadius="35dp"
                />
                <TextView
                        android:text="Justin Babier"
                        android:textSize="20dp"

                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView28a" android:layout_weight="1"
                        android:gravity="center_horizontal"/>

            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:id="@+id/ViewA"
                  android:layout_marginTop="5dp"
                  android:background="@color/purple_500"
                  android:layout_below="@id/sectionA"/>


            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/sectionB"
                          android:layout_below="@id/ViewA"
                          android:layout_height="30dp"
                          android:orientation="horizontal">

                <com.comix.rounded.RoundedCornerImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:background="#a8a8a8"
                        android:layout_width="15dp"

                        android:layout_marginLeft="10dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"

                        android:scaleType="fitXY"
                        app:cornerBottomDisable="false"
                        app:cornerLeftDisable="false"
                        app:cornerRightDisable="false"
                        app:cornerTopDisable="false"
                        app:cornerColor="#f6f7fb"
                        app:cornerRadius="30dp"
                />
                <TextView
                        android:text="General"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViaew28" android:layout_weight="1"
                />

            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:id="@+id/ViewC"
                  android:layout_marginTop="5dp"
                  android:background="@color/purple_500"
                  android:layout_below="@id/sectionB"/>


            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/sectionC"
                          android:layout_below="@id/ViewC"
                          android:layout_height="30dp"
                          android:orientation="horizontal">

                <com.comix.rounded.RoundedCornerImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:background="#a8a8a8"
                        android:layout_width="15dp"

                        android:layout_marginLeft="10dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"

                        android:scaleType="fitXY"
                        app:cornerBottomDisable="false"
                        app:cornerLeftDisable="false"
                        app:cornerRightDisable="false"
                        app:cornerTopDisable="false"
                        app:cornerColor="#f6f7fb"
                        app:cornerRadius="30dp"
                />
                <TextView
                        android:text="Notitfiaction Preference "
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textVieaw128" android:layout_weight="1"
                />

            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:id="@+id/ViewD"
                  android:layout_marginTop="5dp"
                  android:background="@color/purple_500"
                  android:layout_below="@id/sectionC"/>


            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/sectionD"
                          android:layout_below="@id/ViewD"
                          android:layout_height="30dp"
                          android:orientation="horizontal">

                <com.comix.rounded.RoundedCornerImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:background="#a8a8a8"
                        android:layout_width="15dp"

                        android:layout_marginLeft="10dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"

                        android:scaleType="fitXY"
                        app:cornerBottomDisable="false"
                        app:cornerLeftDisable="false"
                        app:cornerRightDisable="false"
                        app:cornerTopDisable="false"
                        app:cornerColor="#f6f7fb"
                        app:cornerRadius="30dp"
                />
                <TextView
                        android:text="Share "
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textVieaw28" android:layout_weight="1"
                />

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:id="@+id/ViewE"
                  android:layout_marginTop="5dp"
                  android:background="@color/purple_500"
                  android:layout_below="@id/sectionD"/>

            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/sectionE"
                          android:layout_below="@id/ViewE"
                          android:layout_height="30dp"
                          android:orientation="horizontal">

                <com.comix.rounded.RoundedCornerImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:background="#a8a8a8"
                        android:layout_width="15dp"

                        android:layout_marginLeft="10dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"

                        android:scaleType="fitXY"
                        app:cornerBottomDisable="false"
                        app:cornerLeftDisable="false"
                        app:cornerRightDisable="false"
                        app:cornerTopDisable="false"
                        app:cornerColor="#f6f7fb"
                        app:cornerRadius="30dp"
                />
                <TextView
                        android:text="About App "
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView2a8" android:layout_weight="1"
                />

            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:id="@+id/ViewF"
                  android:layout_marginTop="5dp"
                  android:background="@color/purple_500"
                  android:layout_below="@id/sectionE"/>


            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/sectionF"
                          android:layout_below="@id/ViewF"
                          android:layout_height="30dp"
                          android:orientation="horizontal">

                <com.comix.rounded.RoundedCornerImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:background="#a8a8a8"
                        android:layout_width="15dp"

                        android:layout_marginLeft="10dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"

                        android:scaleType="fitXY"
                        app:cornerBottomDisable="false"
                        app:cornerLeftDisable="false"
                        app:cornerRightDisable="false"
                        app:cornerTopDisable="false"
                        app:cornerColor="#f6f7fb"
                        app:cornerRadius="30dp"
                />
                <TextView
                        android:text="Logout "
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView28" android:layout_weight="1"
                />

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>