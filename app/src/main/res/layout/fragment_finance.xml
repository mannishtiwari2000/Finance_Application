<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.notifications.FinanceFragment">


    <androidx.cardview.widget.CardView
            android:id="@+id/Section_A"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"

            android:layout_height="240dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_alignParentLeft="true">


        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/section_AB"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_alignParentLeft="true">

                <TextView
                        android:text="STATISTICS"
                        android:textSize="20dp"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5a"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_below="@id/section_AB"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:id="@+id/AC"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_weight="1"
                        android:text="View As"
                        android:textAlignment="viewEnd"
                        android:layout_marginTop="10dp"

                        android:layout_marginRight="5dp"
                        android:textColor="@color/purple_500"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/textView15"/>
                <Spinner
                        android:layout_weight="1"
                        android:layout_width="250dp"
                        android:background="@drawable/editext_rounded"
                        android:layout_marginRight="20dp"
                        android:layout_height="40dp"
                        android:id="@+id/spinner2"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/AD"
                    android:layout_below="@id/AC"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Profit"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView16"/>
                <SeekBar
                        android:progress="40"
                        android:thumb="@drawable/custom_seek_thumb"
                        android:progressDrawable="@drawable/custom_track_seek"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" android:id="@+id/seekBar"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_below="@id/AD"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Loss"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView161"/>
                <SeekBar
                        android:progress="10"
                        android:thumb="@drawable/custom_thumb2"
                        android:progressDrawable="@drawable/custom_seek_bar2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" android:id="@+id/seekBar1"/>
            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
            android:id="@+id/Section_B"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/Section_A"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/section_ABC"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" android:layout_alignParentLeft="true">

                <TextView
                        android:text="ACTIVITY"
                        android:textSize="20dp"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5ac"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_below="@id/section_ABC"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:id="@+id/ACC"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_weight="1"
                        android:text="Short By"
                        android:textAlignment="viewEnd"


                        android:layout_marginRight="5dp"
                        android:textColor="@color/purple_500"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/textView15C"/>
                <Spinner
                        android:layout_weight="1"
                        android:layout_width="250dp"
                        android:background="@drawable/editext_rounded"
                        android:layout_marginRight="20dp"
                        android:layout_height="40dp"
                        android:id="@+id/spinner2C"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_below="@id/ACC"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_corner"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/ACCD"
                    android:layout_height="60dp">


                <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1.4"


                        android:background="#a8a8a8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <TextView
                            android:text="RS"

                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView26"
                            android:gravity="center_horizontal"/>
                    <TextView
                            android:text="15,000"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView27"
                            android:gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="0.6"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Narender Raghav"

                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2116"/>
                    <TextView

                            android:text="Date 1-dec-2020"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2117"
                    />
                    <ImageButton
                            android:src="@drawable/ic_baseline_remove_red_eye_24"
                            android:layout_gravity="end"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="-45dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageButton12"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_below="@id/ACCD"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    android:background="@drawable/layout_corner"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ACCDE"
                    android:layout_height="60dp">


                <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1.4"
                        android:background="#a8a8a8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <TextView
                            android:text="RS"

                            android:layout_marginTop="15dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView126"
                            android:gravity="center_horizontal"/>
                    <TextView
                            android:text="15,000"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView127"
                            android:gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_weight="0.6"
                        android:orientation="vertical"

                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Narender Raghav"
                            android:paddingLeft="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView216"/>
                    <TextView

                            android:text="Date 1-dec-2020"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView217"
                    />
                    <ImageButton
                            android:src="@drawable/ic_baseline_remove_red_eye_24"
                            android:layout_gravity="end"
                            android:layout_marginRight="20dp"
                           android:layout_marginTop="-45dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/imageButton2"/>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>