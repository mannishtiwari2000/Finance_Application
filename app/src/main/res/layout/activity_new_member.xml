<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".New_member">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_action_bar"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:theme="?attr/actionBarTheme"
            android:backgroundTint="@color/white"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp" android:layout_alignParentTop="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"

                      android:orientation="horizontal">
            <com.comix.rounded.RoundedCornerImageView
                    android:id="@+id/Profile_icon"
                    android:src="@drawable/ic_baseline_add_24"

                    android:layout_width="40dp"

                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"

                    android:scaleType="fitXY"
                    app:cornerBottomDisable="false"
                    app:cornerLeftDisable="false"
                    app:cornerRightDisable="false"
                    app:cornerTopDisable="false" app:cornerRadius="35dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                    app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.093"/>
            <TextView
                    android:text="New Member"
                    android:textColor="@color/purple_500"
                    android:layout_marginRight="20dp"

                    android:textAlignment="viewStart"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-black"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9" android:layout_weight="1"
                    android:gravity="start"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <androidx.cardview.widget.CardView
android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:background="#fdfdfe"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:hint="ID"
                    android:background="@drawable/editext_rounded"
                    android:ems="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/SignUp_Name"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:background="@drawable/editext_rounded"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="Full Name "
                    android:paddingLeft="10dp"
                    android:layout_below="@id/SignUp_Name"
                    android:ems="10"
                    android:id="@+id/SignUp_Phone"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:layout_below="@id/SignUp_Phone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Amount"
                    android:background="@drawable/editext_rounded"
                    android:id="@+id/SignUp_EmailAddress"/>
            <EditText
                    android:layout_below="@id/SignUp_EmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="datetime"
                    android:ems="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Date"
                    android:background="@drawable/editext_rounded"
                    android:id="@+id/SignUp_Password"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:ems="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Mobile"
                    android:background="@drawable/editext_rounded"

                    android:layout_below="@id/SignUp_Password"
                    android:id="@+id/SignUp_Confirm_Password2"/>

           <LinearLayout android:layout_width="match_parent"
                         android:layout_height="40dp"
                         android:id="@+id/spinner_layout"
                         android:layout_marginLeft="20dp"
                         android:layout_marginRight="20dp"
                         android:layout_marginTop="10dp"
                         android:background="@drawable/editext_rounded"
                         android:layout_below="@id/SignUp_Confirm_Password2"
                         android:paddingLeft="10dp">
               <Spinner
                        android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:id="@+id/spinner_Loan_Type"/>
           </LinearLayout>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Interest Rate"
                    android:background="@drawable/editext_rounded"

                    android:layout_below="@id/spinner_layout"
                    android:id="@+id/Interest_Rate"/>

            <LinearLayout
                    android:id="@+id/check_l"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@id/Interest_Rate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                <TextView
                        android:text="Upload Documents"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Button
                        android:text="Browse"
                        android:backgroundTint="#ececf0"
                        android:textColor="@color/black"
                        android:background="@drawable/editext_rounded"
                        android:layout_width="100dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/Browse_btn" android:layout_weight="1"/>

            </LinearLayout>
            <Button
                    android:text="SAVE"
                    android:layout_below="@id/check_l"
                    android:layout_width="match_parent"
                    android:backgroundTint="#ef7b00"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_corner"
                    android:layout_height="40dp"
                    android:id="@+id/button3"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>