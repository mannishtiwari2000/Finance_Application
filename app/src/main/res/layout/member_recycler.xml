<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

            android:id="@+id/section_B"
            android:layout_width="match_parent"
            android:background="#fdfdfe"

            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="4"

                android:layout_height="match_parent">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:layout_weight="1"
                          android:id="@+id/A1"
                          android:orientation="vertical"
            >

                <TextView
                        android:text="Name"
                        android:layout_marginTop="10dp"
                         android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView91" android:layout_weight="1"
                        android:gravity="center_horizontal"/>
                <TextView
                        android:text="Phone"



                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView110" android:layout_weight="1"
                        android:gravity="center_horizontal"/>
                <TextView
                        android:text="ID"

                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView113" android:layout_weight="1"
                        android:gravity="center_horizontal"/>
                <TextView
                        android:text="Status"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewa1" android:layout_weight="1"
                        android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:id="@+id/B1"
                          android:layout_weight="1"
                          android:orientation="vertical"
            >

                <TextView
                        android:text="Textview"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:id="@+id/mem_name" android:layout_weight="1"
                />
                <TextView
                        android:text="TextView"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mem_phone" android:layout_weight="1"
                        android:gravity="center_horizontal"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/mem_id"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"/>
                <TextView
                        android:text="TextView"
                        android:layout_marginTop="5dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mem_status"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:id="@+id/C1"
                          android:layout_weight="1"
                          android:orientation="vertical"
            >

                <TextView
                        android:text="Amt."
                        android:layout_marginTop="10dp"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewb1"
                        android:layout_weight="1"
                       />
                <TextView
                        android:text="EMI"


                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textVie1wc" android:layout_weight="1"
                      />
                <TextView
                        android:text="Due"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1s"
                        android:layout_weight="1"
                        />
                      </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_margin="5dp"
                          android:id="@+id/D1"
                          android:layout_weight="1"
                          android:orientation="vertical"
            >

                <TextView
                        android:text="TextView"
                       android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/mem_amt"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"/>
                <TextView
                        android:text="TextView"

                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mem_Emi" android:layout_weight="1"
                        android:gravity="center_horizontal"/>
                <TextView
                        android:text="TextView"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:id="@+id/mem_Due" android:layout_weight="1"
                     />
                    </LinearLayout>


        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="120dp"
                      android:id="@+id/E1"
                      android:weightSum="3"

                      android:orientation="horizontal"
        >

            <Button
                    android:text="View"
                    android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
                    android:backgroundTint="#bfa1ff"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"

                    android:id="@+id/View_member"/>

            <Button
                    android:layout_weight="1"
                    android:text="Edit"
                    android:drawableRight="@drawable/ic_baseline_edit_24"
                    android:backgroundTint="#ff6666"
                    android:layout_margin="5dp"

                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/Edit_Member_Btn"/>

            <Button
                    android:layout_weight="1"
                    android:text="Save"
                    android:drawableRight="@drawable/ic_baseline_arrow_circle_down_24"
                    android:backgroundTint="#999999"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/button13"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>