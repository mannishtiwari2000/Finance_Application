<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f7fb"
        tools:context=".Sign_Up">

    <LinearLayout
            android:id="@+id/section_A"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:text="S I G N U P"
                android:textAlignment="center"
                android:textColor="#ef7b00"
                android:textSize="25dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:layout_below="@id/section_A"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:background="#fdfdfe"
         android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/section_A" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

       <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:hint="Name"
                    android:background="@drawable/editext_rounded"
                    android:ems="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/SignUp_Name"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="phone"
                    android:background="@drawable/editext_rounded"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="Phone"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/SignUp_Name"
                    android:ems="10"
                    android:id="@+id/SignUp_Phone"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:layout_below="@id/SignUp_Phone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Email"
                    android:background="@drawable/editext_rounded"
                    android:id="@+id/SignUp_EmailAddress"/>
            <EditText
                    android:layout_below="@id/SignUp_EmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="numberPassword"
                    android:ems="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Password"
                    android:background="@drawable/editext_rounded"
                    android:id="@+id/SignUp_Password"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="numberPassword"
                    android:ems="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Confirm Password"
                    android:background="@drawable/editext_rounded"

                    android:layout_below="@id/SignUp_Password"
                    android:id="@+id/SignUp_Confirm_Password2"/>


            <TextView
                    android:text="@string/Terms"
                    android:layout_marginLeft="52dp"
                    android:textColor="#ef7b00"
                    android:layout_marginTop="-5dp"
                    android:layout_below="@id/check_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
            />

            <Button
                    android:text="SIGN UP"
                    android:layout_below="@id/textView7"
                    android:layout_width="match_parent"
                    android:backgroundTint="#ef7b00"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/white"
                    android:background="@drawable/textview_corner"
                    android:layout_height="40dp"
                    android:id="@+id/Sign_Up"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"/>
            <LinearLayout
                    android:id="@+id/check_l"
                    android:orientation="horizontal"
                    android:layout_below="@id/SignUp_Confirm_Password2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <CheckBox android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="5dp"

                          android:layout_toLeftOf="@+id/Term"
                          android:layout_alignParentStart="true"
                          android:layout_marginStart="20dp"
                          android:layout_alignParentLeft="true"
                          android:layout_marginLeft="20dp"/>
                <TextView
                        android:text="@string/Check"
                        android:layout_below="@id/SignUp_Confirm_Password2"
                        android:layout_width="300dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/Term"

                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"

                        android:layout_marginRight="160dp"
                        android:layout_marginEnd="160dp"
                />
            </LinearLayout>

        </RelativeLayout>
       </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>